@using Web_shop.Utility
<script src="~/lib/jquery/dist/jquery.js">
</script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js" integrity="sha512-VEd+nq25CkR676O+pLBnDW09R7VQX9Mdiij052gVCp5yVH3jGtH70Ho/UUv4mJDsEdTvqRCFZg0NKGiojGnUCw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

@if(TempData[WC.SuccessNotification] is not null)
{
    <script type="text/javascript">
        toastr.success('@TempData[WC.SuccessNotification]');
    </script>   
}

@if(TempData[WC.ErrorNotification] is not null)
{
    <script type="text/javascript">
        toastr.error('@TempData[WC.ErrorNotification]');
    </script>   
}