@model IEnumerable<Product>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class=col-6>
            <h2 class="text-primary">Products List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Upsert" class="btn btn-primary">
               <i class="fas fa-plus"></i> &nbsp; Create new Product
            </a>
        </div>
    </div>

    @if (Model.Any())
    {
        <table class="tabel table-bordered tabel-table-striped" style="width:100%">
           <thead>
               <tr>
                   <th>Product Name</th>
                   <th>Short Description</th>
                   <th>Category</th>
                   <th>Price</th>
               </tr>
           </thead>
           <tbody>
                @foreach(var category in Model)
                {
                    <tr>
                        <td width="20%">@category.Name</td>
                        <td width="20%">@category.ShortDescription</td>
                        <td width="10%">@category.Category.Name</td>
                        <td width="10%">@category.Price</td>
                        <td width="20%">
                            <div class="w-75 btn-group">
                                <a asp-action="Upsert" asp-route-id="@category.Id" class="btn btn-primary mx-1">
                                   <i class="fas fa-edit"></i> &nbsp;
                                </a>
                                <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger mx-1">
                                   <i class="fas fa-trash"></i> &nbsp;
                                </a>
                            </div>
                        </td>
                    </tr>
                }
           </tbody>
        </table>
    }
    else
    {
        <p>No products exists.</p>
    }
</div>
