@using Web_shop.Models.ViewModels
@using Web_shop.Utility
@model ProductVM
@{
    var isCreate = Model.Product is null || Model.Product.Id == 0;
    var title = isCreate ? "Create Product" : "Edit product";
    var buttonText = isCreate ? "Create" : "Update";

    string GetImagePath (string imageName) => string.IsNullOrEmpty(imageName) ? "#" :$@"{System.IO.Path.Combine(WC.ImagePath, imageName)}";
}

<form method="post" enctype="multipart/form-data">
    @if(!isCreate)
    {
        <input asp-for="Product.Id" hidden/> 
    }
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">@title</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Product.Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Product.Name" class="form-control"/>
                        <span asp-validation-for="Product.Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                         <label asp-for="Product.Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Product.Price" class="form-control" />
                        <span asp-validation-for="Product.Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                         <label asp-for="Product.ShortDescription"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Product.ShortDescription" class="form-control summernote"></textarea>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                         <label asp-for="Product.Desctiption"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Product.Desctiption" class="form-control summernote"></textarea>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                         Image
                    </div>
                    <div class="col-8">
                        <input asp-for="Product.ImageLink" type="file" name="files" id="uploadBox" multiple class="form-control" />
                        <span asp-validation-for="Product.ImageLink" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                         <label asp-for="Product.CategoryId"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="Product.CategoryId" asp-items="@Model.Categories" class="form-select">
                            <option disabled selected> -- Select Category --</option>
                        </select>
                        <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="@buttonText"/>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">
                                <i class="fas fa-sign-out-alt"></i>
                                &nbsp;
                                Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-3 fa-10x pt-4">
                @if(Model.Product is not null)
                {
                    <img alt="Product image" src="~/@GetImagePath(Model.Product.ImageLink)" width="100%" style="border-radius: 5px; border: 1px solid #bbb"/>
                }
            </div>
        </div>
        <div class="col-4">

        </div>
    </div>
</form>
<partial name="_ValidationScriptsPartial"/> 
