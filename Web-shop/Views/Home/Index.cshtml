@using Web_shop.Models.ViewModels
@model HomeVM

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="text-center">
        <button class="btn btn-dark filter-button" data-filter="all">All</button>
        @foreach(var category in Model.Categories)
        {
            <button class="btn btn-outline-secondary filter-button" data-filter="@category.Name.Replace(' ', '_')">@category.Name</button>
        }
    </div>
    <br />
    <div class="row">
        @foreach(var prod in Model.Products)
        {
            <partial name="_ProductCard" model="prod"/>
        }
    </div>
</div>

@section Scripts 
{
    <script>
        $(document).ready(function() {
            $(".filter-button").click(function() {
                console.log('click');
                var value = $(this).attr('data-filter');
                if(value === 'all') {
                    console.log('click all');
                    $('.filter').show('1000');
                }
                else {
                    console.log('click not all');
                    $('.filter').not('.' + value).hide('3000');
                    $('.filter').filter('.' + value).show('3000');
                }
            })
        });
    </script>

}